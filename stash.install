post_install() {
	if ! getent passwd stash > /dev/null; then
		useradd -r stash
	fi
    chown -R stash:stash '/opt/atlassian-stash'
    chown -R stash:stash '/var/lib/atlassian-stash'
}

post_upgrade() {
    chown -R stash:stash '/opt/atlassian-stash'
    chown -R stash:stash '/var/lib/atlassian-stash'
}
